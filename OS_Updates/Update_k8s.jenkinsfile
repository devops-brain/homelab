            echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
            sh "##juju ssh kubernetes-worker/2 'sudo apt update && sudo apt dist-upgrade -y && sudo apt autoremove -y && sudo snap refresh'"
