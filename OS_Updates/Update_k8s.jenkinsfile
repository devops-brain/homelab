          }
        }
      }
    }
    stage('initiate reboot') {
      steps {
        echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
        sh "juju ssh -m 'homelab:admin/controller' 0 'sudo shutdown -r +1'"
        sh "juju ssh easyrsa/0 'sudo shutdown -r +12'"
        sh "juju ssh etcd/0 'sudo shutdown -r +22'"
        sh "juju ssh etcd/1 'sudo shutdown -r +32'"
        sh "juju ssh etcd/2 'sudo shutdown -r +42'"
        sh "juju ssh kubeapi-load-balancer/0 'sudo shutdown -r +52'"
        sh "juju ssh kubernetes-control-plane/0 'sudo shutdown -r +63'"
        sh "juju ssh kubernetes-control-plane/1 'sudo shutdown -r +73'"
        sh "juju ssh kubernetes-worker/0 'sudo shutdown -r +83'"
        sh "juju ssh kubernetes-worker/1 'sudo shutdown -r +93'"
        sh "juju ssh kubernetes-worker/2 'sudo shutdown -r +103'"
        sh "juju ssh kubernetes-worker/3 'sudo shutdown -r +113'"
        sh "juju ssh kubernetes-worker/4 'sudo shutdown -r +123'"
        sh "juju ssh kubernetes-worker/5 'sudo shutdown -r +133'"
        echo "cluster rebooted."
      }
    }
  }
}
