            sh "##juju ssh kubernetes-worker/4 'sudo apt update && sudo apt dist-upgrade -y && sudo apt autoremove -y && sudo snap refresh'"
            sh "juju ssh kubernetes-worker/4 'sudo apt update && sudo apt dist-upgrade -y && sudo apt autoremove -y && sudo snap refresh'"
            echo "kubernetes-worker/4 is updated, but we may need to arrange rebooting."
