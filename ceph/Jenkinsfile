pipeline {
  agent {
    label "saltmaster"
  }

  stages {
    stage('bootstrap resources as needed'){
      steps {
        echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
        sh 'cd ~/; pwd'
        sh 'helm repo add rook-release https://charts.rook.io/release'
        sh 'kubectl create namespace rook-ceph || true'
        sh "#curl https://raw.githubusercontent.com/kubernetes/helm/master/scripts/get | bash || true"
        sh "#kubectl create serviceaccount tiller --namespace kube-system || true"
        sh "#kubectl create clusterrolebinding tiller-cluster-rule --clusterrole=cluster-admin --serviceaccount=kube-system:tiller || true"
        sh "#helm init --wait --service-account tiller || true"
      }
    }
    stage('ceph with rook via helm'){
      steps {
        echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
        sh "cd ceph; helm upgrade --install --namespace rook-ceph rook-ceph rook-release/rook-ceph -f values.yaml"
      }
    }
  }
}