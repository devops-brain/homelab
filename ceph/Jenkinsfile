pipeline {
  agent {
    label "kubectl"
  }

  stages {
    stage('installing tools'){
      steps {
        echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
        sh 'echo "TODO:  ensure tools are installed"'
      }
    }
    stage('add helm repo'){
      steps {
        echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
        sh "helm repo add rook-release https://charts.rook.io/release"
      }
    }
    stage('deploy base ceph rook operator and infra'){
      steps {
        echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
        sh "helm upgrade -i --create-namespace --namespace rook-ceph rook-ceph rook-release/rook-ceph"
      }
    }
    stage('deploy ceph cluster'){
      steps {
        echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
        sh "helm upgrade -i --create-namespace --namespace rook-ceph rook-ceph-cluster \
                --set operatorNamespace=rook-ceph rook-release/rook-ceph-cluster -f ceph/values-override.yaml"
      }
    }
  }
}